<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    tools:context="com.marianogiuffrida.pilotcalc.UI.fragments.InFlightWindFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/inputLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inputs"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black" />

        <RelativeLayout
            android:id="@+id/inputs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputLabel"
            android:background="@drawable/round_corners_rectangle">

            <TextView
                android:id="@+id/headingLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/heading"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black" />

            <antistatic.spinnerwheel.WheelVerticalView
                android:id="@+id/heading0"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/headingLabel" />

            <antistatic.spinnerwheel.WheelVerticalView
                android:id="@+id/heading1"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headingLabel"
                android:layout_toRightOf="@+id/heading0" />

            <antistatic.spinnerwheel.WheelVerticalView
                android:id="@+id/heading2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headingLabel"
                android:layout_toRightOf="@+id/heading1" />

            <TextView
                android:id="@+id/trackLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/track"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black" />

            <antistatic.spinnerwheel.WheelVerticalView
                android:id="@+id/track2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/trackLabel" />

            <antistatic.spinnerwheel.WheelVerticalView
                android:id="@+id/track1"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/trackLabel"
                android:layout_toLeftOf="@id/track2" />

            <antistatic.spinnerwheel.WheelVerticalView
                android:id="@+id/track0"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:layout_below="@id/trackLabel"
                android:layout_toLeftOf="@id/track1" />

            <LinearLayout
                android:id="@+id/tasLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tasLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/true_air_speed"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/tas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="numberDecimal" />

                <Spinner
                    android:id="@+id/tasSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tasLayout"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/groundSpeedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/ground_speed"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/groundSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="numberDecimal" />

                <Spinner
                    android:id="@+id/groundSpeedSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/outputLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/inputs"
            android:text="@string/results"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/outputLabel"
            android:background="@drawable/round_corners_rectangle">

            <TextView
                android:id="@+id/windDirectionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/wind"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/windDirection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Â° @"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/windSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/windSpeedSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
