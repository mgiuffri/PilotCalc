<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    tools:context="com.marianogiuffrida.pilotcalc.UI.fragments.CalculatorFragment">

    <LinearLayout
        android:id="@+id/CalculatorLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/CalculatorInputDisplay"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|right"
            android:maxLines="1"
            android:scrollbars="horizontal"
            android:text=""
            android:textSize="28sp"
            android:textColor="@color/white"
            android:scrollHorizontally="true"/>

        <TextView
            android:id="@+id/CalculatorResultDisplay"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical|right"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="35sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical"
                android:weightSum="4">

                <Button
                    android:id="@+id/button7"
                    style="@style/NumberButton"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:text="7" />

                <Button
                    android:id="@+id/button4"
                    style="@style/NumberButton"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:text="4" />

                <Button
                    android:id="@+id/button1"
                    style="@style/NumberButton"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:text="1" />

                <Button
                    android:id="@+id/commaButton"
                    style="@style/CalculatorButton"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:text="." />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical"
                android:weightSum="4">

                <Button
                    android:id="@+id/button8"
                    style="@style/NumberButton"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:text="8" />

                <Button
                    android:id="@+id/button5"
                    style="@style/NumberButton"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:text="5" />

                <Button
                    android:id="@+id/button2"
                    style="@style/NumberButton"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:text="2" />

                <Button
                    android:id="@+id/button0"
                    style="@style/NumberButton"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical"
                android:weightSum="4">

                <Button
                    android:id="@+id/button9"
                    style="@style/NumberButton"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:text="9" />

                <Button
                    android:id="@+id/button6"
                    style="@style/NumberButton"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:text="6" />

                <Button
                    android:id="@+id/button3"
                    style="@style/NumberButton"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:text="3" />


                <Button
                    android:id="@+id/equalButton"
                    style="@style/CalculatorButton"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:text="=" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical"
                android:weightSum="5">

                <Button
                    android:id="@+id/clearButton"
                    style="@style/CalculatorButton"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:text="Clr" />

                <Button
                    android:id="@+id/divideButton"
                    style="@style/CalculatorButton"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:text="\u00F7" />

                <Button
                    android:id="@+id/multiButton"
                    style="@style/CalculatorButton"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:text="*" />

                <Button
                    android:id="@+id/subButton"
                    style="@style/CalculatorButton"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:text="-" />

                <Button
                    android:id="@+id/addButton"
                    style="@style/CalculatorButton"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:text="+" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
